<h1>List of Users</h1>

<table>
  <thead>
    <tr>
       <th>User ID</th>
      <th>User Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <%if current_user %>
          <%if user.id == current_user.id%>
            <td><%= current_user.id %></td>
            <td><%= current_user.email %></td>
           
          <%elsif current_user.email == "admin@admin.com"%>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
          <%end%>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
