<p id="notice"><%= notice %></p>

<h1>Available Products </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>

    <!-- if the current user is shopkeeper he/she can edit product
       and customer can not modify products -->
    <% if current_user %>
      <% if current_user.email == "admin@admin.com" %> 
          <td><%= link_to 'Show', product %>&nbsp;</td> 
          <td><%= link_to 'Edit', edit_product_path(product) %>&nbsp;</td> 
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}%> &nbsp;<br></td>  
           
           

        <% else %>
           
        <%end%>
      <%end%> 
      <td><a href="/cart/<%= product.id%>">Add to cart</a></td>   
      </tr>
    <% end %> 
  </tbody>
</table>
<br><br>
    <% if current_user.email == "admin@admin.com" %> 
        <td><%= link_to 'New Product', new_product_path %> &nbsp;</td>
    <%end%>
<br>

 
